<div class="container">
  <%= bootstrap_form_for(@lift_type) do |f| %>
    <%= f.text_field :name, label: 'Nazwa' %>
    <%= f.text_field :condition, label: 'Zapytanie' %>
    na przyk≈Çad:
    <pre>name like '%ROSSMANN%'</pre>
    <%= f.submit 'Zapisz', class: 'btn btn-primary' %>
    <%= link_to 'Anuluj', lift_types_path, :class => 'btn btn-default' %>
  <% end %>
</div>

<table data-toggle="table" data-search="true">
  <thead>
  <tr>
    <th>Typ transakcji (transaction_type)</th>
    <th>Nazwa i rachunek nadawcy/odbiorcy (name/account)</th>
    <th>Opis transakcji (description)</th>
    <th>Dane dodatkowe (addtional_data)</th>
  </tr>
  </thead>
  <tbody>
  <% @lifts.each do |lift| %>
    <tr>
      <td><%= lift.transaction_type %></td>
      <td>
        <%= lift.name %>
        <%= lift.account %>
      </td>
      <td><%= lift.description %></td>
      <td><%= lift.addtional_data %></td>
    </tr>
  <% end %>
  </tbody>
</table>